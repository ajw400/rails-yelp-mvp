<h1>Restaurants Details for <%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %> </p>
<hr>
<h2>Reviews</h2>
<% @reviews.each do |x| %>
<p><%= x.content %></p>
<p><strong><%= "*" * x.rating %></strong></p>
<% end %>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<p><%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %></p>



